<Controls:MetroWindow 
        x:Class="Find_My_Movie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Find_My_Movie"
        mc:Ignorable="d"
        Title="Find my Movie" 
        Height="350" Width="525"
        Icon="favicon.ico"
        TitleCaps="False" Loaded="MetroWindow_Loaded">
    <Window.Resources>

        <Storyboard x:Key="sbShowLeftMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-304,0,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbHideLeftMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="-304,0,0,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
    </Window.Resources>
    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <Grid Width="{TemplateBinding Width}"
                 Height="{TemplateBinding Height}"
                 Margin="6"
                 Background="Transparent"
                 RenderOptions.EdgeMode="Aliased"
                 RenderOptions.BitmapScalingMode="HighQuality">
                <Image Source="favicon.ico"/>
            </Grid>
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>
    <Grid Background="#FFFAFAFA">
        <StackPanel Panel.ZIndex="2" Name="pnlLeftMenu" Orientation="Horizontal"  HorizontalAlignment="Left" Margin="-304,0,0,-80" Width="422">
            <Border BorderThickness="1" Width="352" Background="#FFFB8633" >
                <Border.BorderBrush>
                    <SolidColorBrush Color="#FFFB8633"/>
                </Border.BorderBrush>

            </Border>
            <Grid>
                <Button Name="btnLeftMenuHide" 
                        Width="48" Height="48" 
                        Click="btnLeftMenuHide_Click" 
                        VerticalAlignment="Top" Margin="-48,0,48,0" 
                        Visibility="Hidden"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Image Width="30" Height="30" Source="assets/img/white-hamburger-menu.png"/>
                </Button>
                <Button Name="btnLeftMenuShow" 
                        Width="48" Height="48" 
                        Click="btnLeftMenuShow_Click" 
                        VerticalAlignment="Top" Margin="-48,0,48,0"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Image Width="30" Height="30" Source="assets/img/white-hamburger-menu.png"/>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
